{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "/1/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      }
      //"route2": {
      //  "ClusterId": "cluster2",
      //  "Match": {
      //    "Path": "/2/{**catch-all}"
      //  },
      //  "Transforms": [
      //    { "PathPattern": "{**catch-all}" }
      //  ]
      //}
    },
    "Clusters": {
      "cluster1": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "http://host.docker.internal:8080/weatherforecast"
          }
        }
      }
      //"cluster2": {
      //  "LoadBalancingPolicy": "RoundRobin",
      //  "Destinations": {
      //    "destination2": {
      //      "Address": "https://172.35.0.2:5101/PageCall"
      //    }
      //  }
      //}
    }
  }
}

